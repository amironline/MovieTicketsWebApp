@model List<MovieShop.Domain.DomainModels.Order>

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Order Id
            </th>
            <th>
                Tickets in Order
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];

            <tr>
                <th scope="row">@(i+1)</th>
                <td><a asp-action="Details" asp-route-id="@item.Id">@item.Id</a></td>
                <td>@item.Tickets.Count</td>
                <td><a class="btn btn-outline-secondary" asp-action="CreateInvoice" asp-route-id="@item.Id">Create Invoice</a></td>
            </tr>            
    }
    </tbody>
</table>